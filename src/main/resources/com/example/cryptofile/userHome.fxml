<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="950.0" stylesheets="@styles/userHome.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cryptofile.UserHomeController">
    <center>
        <StackPane fx:id="contentPane">
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox spacing="25" style="-fx-padding: 30;">

                    <VBox spacing="5">
                        <Label fx:id="welcomeLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Welcome back, user" />
                        <Label fx:id="dateLabel" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Manage your file encryption and decryption with ease" />
                    </VBox>

                    <VBox spacing="15">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Quick Actions" />
                        <HBox alignment="CENTER" spacing="20">
                     <Button mnemonicParsing="false" onAction="#loadEncryptFile" prefHeight="150.0" prefWidth="250.0">
                        <graphic>
                                  <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white;">
                                      <Label style="-fx-font-size: 48px;" text="ðŸ”’" />
                                      <Label text="Encrypt File">
                                          <font>
                                              <Font size="24.0" />
                                          </font>
                              </Label>
                                      <Label alignment="CENTER" text="Secure your files with encryption" />
                                  </VBox>
                        </graphic>
                     </Button>
                     <Button mnemonicParsing="false" onAction="#loadDecryptFile" prefHeight="150.0" prefWidth="250.0">
                        <graphic>
                                  <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white;">
                                      <Label style="-fx-font-size: 48px;" text="ðŸ”“" />
                                      <Label text="Decrypt File">
                                          <font>
                                              <Font size="24.0" />
                                          </font>
                              </Label>
                                      <Label alignment="CENTER" text="Access your encrypted files" />
                                  </VBox>
                        </graphic>
                     </Button>

                        </HBox>
                    </VBox>
                    <VBox spacing="15">
                        <HBox alignment="CENTER_LEFT">
                            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Today's Activity" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Hyperlink fx:id="activityLogsLink" onAction="#loadActivityLogs" style="-fx-text-fill: #3498db; -fx-font-size: 13px;" text="View All" />
                        </HBox>
                        <VBox fx:id="activityLogsBox" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12;" />
                    </VBox>

                </VBox>
            </ScrollPane>

        </StackPane>
    </center>
</BorderPane>
