<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@styles/login.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cryptofile.LoginController">
   <center>
       <StackPane fx:id="loginPane" maxHeight="700.0" prefHeight="700.0" prefWidth="600.0" BorderPane.alignment="CENTER">
           <VBox fx:id="loginVBox" alignment="CENTER" maxHeight="600.0" maxWidth="450.0" minHeight="300.0" minWidth="400.0" prefHeight="600.0" prefWidth="400.0" spacing="30.0">
               <Label fx:id="welcomeText" text="Welcome to CryptoFile ">
                   <font>
                       <Font size="24.0" />
                   </font>
               </Label>
               <Label fx:id="loginLabel" text="Log in to get started">
                   <font>
                       <Font size="18.0" />
                   </font>
               </Label>
               <TextField fx:id="username" promptText="Enter your username">
                   <font>
                       <Font size="16.0" />
                   </font>
               </TextField>
               <StackPane fx:id="passwordPane" maxHeight="80.0" prefHeight="150.0" prefWidth="100.0">
                   <PasswordField fx:id="password" promptText="Enter your password">
                       <font>
                           <Font size="16.0" />
                       </font>
                   </PasswordField>
                   <TextField fx:id="showPassword" managed="false" promptText="Enter your password" visible="false">
                       <font>
                           <Font size="16.0" />
                       </font>
                   </TextField>
                   <ToggleButton fx:id="eyeButton" mnemonicParsing="false" onAction="#togglePasswordVisibility" text="ðŸ‘" StackPane.alignment="CENTER_RIGHT">
                       <font>
                           <Font size="15.0" />
                       </font>
                  <StackPane.margin>
                     <Insets right="1.0" />
                  </StackPane.margin>
                   </ToggleButton>
               </StackPane>
               <Button fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#HandleLogin" text="Log in">
                   <font>
                       <Font size="18.0" />
                   </font>
               </Button>
            <Label fx:id="errorMsg" alignment="CENTER">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
               <HBox fx:id="createAccountHBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="1.0">
                   <Text fx:id="message" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account here? " />
                   <Hyperlink fx:id="registerLink" onAction="#switchToRegisterScene" text="Register" />
               </HBox>
           </VBox>
       </StackPane>
   </center>
   <top>
      <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="BOTTOM_CENTER" />
   </top>
</BorderPane>
